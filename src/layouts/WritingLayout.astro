---
import Nav from "../components/Nav.astro";

const { frontmatter } = Astro.props;
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{frontmatter.title}</title>
    <!-- Include your site's CSS here -->
    <link rel="stylesheet" href="/src/styles/global.css" />
  </head>
  <body>
    <Nav />
    <main>
      <article class="writing">
        <h1 class="writing-title">{frontmatter.title}</h1>
        <slot />
        <!-- This is where your Markdown content will appear -->
      </article>
    </main>
  </body>
</html>

<style is:global>
  :root {
    --accent: 136, 58, 234;
    --accent-light: 224, 204, 250;
    --accent-dark: 49, 10, 101;
    --accent-gradient: linear-gradient(
      45deg,
      rgb(var(--accent)),
      rgb(var(--accent-light)) 30%,
      white 60%
    );
  }
  html {
    font-family: system-ui, sans-serif;
    background: #13151a;
    color: white;
  }
  main {
    margin: auto;
    padding: 1rem;
    margin-top: 10rem;
    width: 800px;
    max-width: calc(100% - 2rem);
    color: white;
    font-size: 20px;
    line-height: 1.6;
    margin-bottom: 6rem;
  }
  .writing {
    max-width: 700px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .writing-title {
    color: rgb(var(--accent-light));
    text-align: center;
    margin-bottom: 2rem;
  }
</style>
